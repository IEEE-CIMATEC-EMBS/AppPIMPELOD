    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Escolha o escore:"
        android:textColor="@color/branco"
        android:textSize="36sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:showDividers="middle"
        >

    <Button
        android:id="@+id/buttonPIM"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@color/azulClaro"
        android:onClick="clickPIM"
        android:text="PIM2"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="20sp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/buttonPELOD"
        android:onClick="clickPELOD"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@color/azulClaro"
        android:left="@id/buttonPELOD"
        android:text="PELOD2"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:itemIconTint="@drawable/bottom_item_background_color"
        app:itemTextColor="@drawable/bottom_item_background_color"
        android:backgroundColor="@color/azulEscuro"
        app:menu="@menu/bottom_menu" />

</LinearLayout>